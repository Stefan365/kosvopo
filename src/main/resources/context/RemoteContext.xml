<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
       default-lazy-init="true" default-autowire="byType"
>
    <!--    <import resource="UtilsContext.xml"/> -->
    <!-- BoneCP configuration -->
    
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        
        <property name="locations">
            <list>
                <value>classpath:remote_client.properties</value>
                <!--<value>classpath:remote_client.properties</value>-->
            </list>
        </property>
    </bean>  
    

    <bean id="tickGrabberService" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean" autowire="no">
        <property name="serviceUrl" value="${service.server.protocol}://${service.server.address}/bloom_remote/tickGrabberService"/>
        <property name="serviceInterface" value="com.pelynch.pel_bloomberg_rem_client.interfaces.TickGrabberServiceRemote"/>
        <property name="httpInvokerRequestExecutor">
            <!--<bean class="org.springframework.security.remoting.httpinvoker.AuthenticationSimpleHttpInvokerRequestExecutor" autowire="no"/>-->
            <bean class="org.springframework.remoting.httpinvoker.CommonsHttpInvokerRequestExecutor" autowire="no">
                <property name="readTimeout" value="500000" /> 
            </bean>
            <!--<bean class="org.springframework.security.remoting.httpinvoker.SimpleHttpHttpInvokerRequestExecutor" autowire="no"/>-->
        </property>
    </bean>

    <bean id="updateDataBAPIService" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean" autowire="no">
        <property name="serviceUrl" value="${service.server.protocol}://${service.server.address}/bloom_remote/updateDataBAPIService"/>
        <property name="serviceInterface" value="com.pelynch.pel_bloomberg_rem_client.interfaces.UpdateDataBAPIremote"/>
        <property name="httpInvokerRequestExecutor">
            <!--<bean class="org.springframework.security.remoting.httpinvoker.AuthenticationSimpleHttpInvokerRequestExecutor" autowire="no"/>-->
            <bean class="org.springframework.remoting.httpinvoker.CommonsHttpInvokerRequestExecutor" autowire="no">
                <property name="readTimeout" value="500000" /> 
            </bean>
            <!--<bean class="org.springframework.security.remoting.httpinvoker.SimpleHttpHttpInvokerRequestExecutor" autowire="no"/>-->
        </property>
    </bean>

    <bean id="getAnyDataService" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean" autowire="no">
        <property name="serviceUrl" value="${service.server.protocol}://${service.server.address}/bloom_remote/getAnyDataService"/>
        <property name="serviceInterface" value="com.pelynch.pel_bloomberg_rem_client.interfaces.GetAnyDataBAPIremote"/>
        <property name="httpInvokerRequestExecutor">
            <!--<bean class="org.springframework.security.remoting.httpinvoker.AuthenticationSimpleHttpInvokerRequestExecutor" autowire="no"/>-->
            <bean class="org.springframework.remoting.httpinvoker.CommonsHttpInvokerRequestExecutor" autowire="no">
                <property name="readTimeout" value="500000" /> 
            </bean>
            <!--<bean class="org.springframework.security.remoting.httpinvoker.SimpleHttpHttpInvokerRequestExecutor" autowire="no"/>-->
        </property>
    </bean>
    

        
        
        
